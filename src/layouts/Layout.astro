---
import '@fontsource/onest/400.css';
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio Jeinnert </title>
	</head>
	<body class="bg-neutral-950">
		<div class="absolute top-0 z-[-2] h-full w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header></Header>
		<slot />
	</body>
</html>

<style>
	:root{
		color-scheme: light dark;
	}
	html{
		scroll-behavior: smooth;
		font-family: system-ui, -apple-system;
		
	}

	body{
		font-family: 'Onest';
		background-color: #142635;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;
		
	}
</style>
